<?xml version="1.0" encoding="utf-8"?>
<!-- 模块选择页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 开始上课 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/moudleselector_startClass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FF6600"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="开始上课"
                android:textColor="#ffffff"
                android:textSize="35sp" />
        </LinearLayout>

        <!-- 应用中心  电子画板 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <TextView
                 android:id="@+id/moudleselector_appCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0099FF"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="应用中心"
                android:textColor="#ffffff"
                android:textSize="35sp" />

            <TextView
                 android:id="@+id/moudleselector_canvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#33CC33"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="电子画板"
                android:textColor="#ffffff"
                android:textSize="35sp" />
        </LinearLayout>

        <!-- 互联网 音乐 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/moudleselector_internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CC9909"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="互联网"
                android:textColor="#ffffff"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/moudleselector_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#999999"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="音乐"
                android:textColor="#ffffff"
                android:textSize="35sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/moudleselector_backToAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="返回选择AP" />

</RelativeLayout>