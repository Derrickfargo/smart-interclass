<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llayout"
    android:orientation="vertical"
    android:background="@drawable/bg_empty">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <GridView
            android:layout_marginTop="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:id="@+id/gv_group_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:columnWidth="230dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:numColumns="auto_fit"
            android:scrollbars="none" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_add_partner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="@drawable/cloud"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/llayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_stname"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_input"
                android:singleLine="true"
                android:maxLength="5"
                android:hint="姓名" />

            <LinearLayout
                android:id="@+id/llayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_stnumber"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_input"
                    android:singleLine="true"
                    android:maxLength="15"
                    android:hint="学号" />

                <RadioGroup
                    android:id="@+id/gender_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:background="@drawable/btn_gender_male"
                        android:id="@+id/male"
                        android:checked="true"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:background="@drawable/btn_gender_female"
                        android:id="@+id/female" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center"
            android:src="@drawable/btn_join_normal" />
    </LinearLayout>
</LinearLayout>