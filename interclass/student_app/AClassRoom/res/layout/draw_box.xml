<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/rlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <cn.com.incito.classroom.widget.canvas.SketchPadView
            android:id="@id/sketchpad"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 背景选择按钮 -->

                <Button
                    android:id="@+id/bg_select_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_cgbg_white" >
                </Button>

                <!-- 颜色选择 -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@id/color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_white" />

                    <ImageView
                        android:id="@+id/color_canary_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_canary_yellow" />

                    <ImageView
                        android:id="@+id/ico_lemon_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_lemon_yellow" />

                    <ImageView
                        android:id="@+id/ico_salmon_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_salmon_orange" />

                    <ImageView
                        android:id="@+id/ico_spanish_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_spanish_orange" />

                    <ImageView
                        android:id="@+id/ico_mineral_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_mineral_orange" />

                    <ImageView
                        android:id="@+id/ico_carmine_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_carmine_red" />

                    <ImageView
                        android:id="@+id/ico_hot_ink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_hot_ink" />

                    <ImageView
                        android:id="@+id/ico_magenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_magenta" />

                    <ImageView
                        android:id="@+id/ico_powder_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_powder_blue" />

                    <ImageView
                        android:id="@+id/ico_turquoise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_turquoise" />

                    <ImageView
                        android:id="@+id/ico_peacpck_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_peacpck_blue" />

                    <ImageView
                        android:id="@+id/ico_dark_purple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_dark_purple" />

                    <ImageView
                        android:id="@+id/ico_dark_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_dark_green" />

                    <ImageView
                        android:id="@+id/ico_moss_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_moss_green" />

                    <ImageView
                        android:id="@+id/ico_parrot_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_parrot_green" />

                    <ImageView
                        android:id="@+id/ico_chocolate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_chocolate" />

                    <ImageView
                        android:id="@+id/ico_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_black" />

                    <ImageView
                        android:id="@+id/ico_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/ico_grey" />
                </LinearLayout>
                <!-- 铅笔粗细选择 -->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp" >

                    <RelativeLayout
                        android:id="@+id/big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true" >

                        <ImageView
                            android:id="@+id/pencile_big"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ico_big" />

                        <ImageView
                            android:id="@+id/ico_big_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/pencile_big"
                            android:layout_alignTop="@id/pencile_big"
                            android:src="@drawable/ico_checked"
                            android:visibility="gone" >
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/big" >

                        <ImageView
                            android:id="@+id/pencile_middle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ico_mid" />

                        <ImageView
                            android:id="@+id/ico_middle_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/pencile_middle"
                            android:layout_alignTop="@id/pencile_middle"
                            android:src="@drawable/ico_checked" >
                        </ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/middle" >

                        <ImageView
                            android:id="@+id/pencile_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ico_sml" />

                        <ImageView
                            android:id="@+id/ico_small_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/pencile_small"
                            android:layout_alignTop="@id/pencile_small"
                            android:src="@drawable/ico_checked"
                            android:visibility="gone" >
                        </ImageView>
                    </RelativeLayout>
                </RelativeLayout>
                <!-- 橡皮擦选项 -->

                <ImageView
                    android:id="@+id/earise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ico_eraser_big" />

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/ic_send_btn" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>