<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/root"
    android:background="@drawable/bg_create_group1"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_back"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/bg_input_gourp_name" >

        <EditText
            android:id="@+id/edit_group_name"
            android:layout_width="335dp"
            android:layout_height="38dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="6dp"
            android:maxLength="8"
            android:background="@null"
            android:hint="@string/please_input_group_name"
            android:inputType="text" />
    </LinearLayout>

    <GridView
        android:id="@+id/grid_gourp_icon"
        android:layout_width="880dp"
        android:layout_height="155dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:columnWidth="90dp"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dp" >
    </GridView>

    <Button
        android:id="@+id/btn_create_group_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="420dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_confirm_group_ok" />

</LinearLayout>