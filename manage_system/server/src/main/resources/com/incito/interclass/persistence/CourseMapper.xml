<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.incito.interclass.persistence.CourseMapper">

	<select id="getCourseList" resultType="com.incito.interclass.entity.Course">
		SELECT	
			id,sum,name,intro,ctime
		FROM 
			tb_course
		ORDER BY
			id
	</select>

	<insert id="save" parameterType="com.incito.interclass.entity.Course">
		INSERT INTO 
			tb_course(sum,name,intro,ctime)
		VALUES
			(#{sum},#{name},#{intro},now())
		<selectKey resultType="int" keyProperty="id" > 
            SELECT @@IDENTITY AS ID 
        </selectKey> 
	</insert>
	
	<delete id="delete" parameterType="java.lang.Integer">
		DELETE FROM tb_course WHERE id = #{id} 
	</delete>
</mapper>