<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap>
	<typeAlias alias="Course" type="com.incito.interclass.entity.Course" />

	<select id="getCourseList" resultClass="Course">
		SELECT	
			id,sum,name,intro,ctime
		FROM 
			tb_course
		ORDER BY
			id
	</select>

	<insert id="saveCourse" parameterClass="Course">
		INSERT INTO 
			tb_course(sum,name,intro,ctime)
		VALUES
			(#sum#,#name#,#intro#,now())
		<selectKey resultClass="int" keyProperty="id" > 
            SELECT @@IDENTITY AS ID 
        </selectKey> 
	</insert>
	
	<delete id="deleteCourse" parameterClass="java.lang.Integer">
		DELETE FROM tb_course WHERE id = #id# 
	</delete>
</sqlMap>